<configuration>
  <!-- Reusable pattern -->
  <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Dein Code (PAKET anpassen!) laut lassen -->
  <logger name="de.aint" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>

  <!-- Spring leiser -->
  <logger name="org.springframework"                 level="WARN"/>
  <logger name="org.springframework.boot"            level="WARN"/>
  <logger name="org.springframework.web"             level="ERROR"/>
  <logger name="org.springframework.context"         level="WARN"/>
  <!-- Auto-Configuration spam runterdrehen -->
  <logger name="org.springframework.boot.autoconfigure" level="ERROR"/>

  <!-- Hibernate & Hikari leiser -->
  <logger name="org.hibernate"                       level="WARN"/>
  <!-- SQL und Bindings komplett aus -->
  <logger name="org.hibernate.SQL"                   level="OFF"/>
  <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
  <!-- (Hibernate 6 binding logger) -->
  <logger name="org.hibernate.orm.jdbc.bind"         level="OFF"/>
  <logger name="org.hibernate.stat"                  level="OFF"/>
  <logger name="com.zaxxer.hikari"                   level="WARN"/>

  <!-- Falls Tomcat/Jetty mitlÃ¤uft -->
  <logger name="org.apache.catalina"                 level="WARN"/>
  <logger name="org.eclipse.jetty"                   level="ERROR"/>
  <logger name="org.eclipse.jetty.server"            level="ERROR"/>

  <!-- Root nicht auf DEBUG lassen! -->
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
